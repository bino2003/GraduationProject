<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangePassword">


    <TextView
        android:layout_width="145dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:text="Change Password"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="306dp"
        android:layout_height="33dp"
        android:layout_marginStart="30dp"
        android:text="Make sure you enter the correct password"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:text="Current Password"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-17dp"
        android:background="@drawable/ic_baseline_lock_open_24" />

    <EditText
        android:id="@+id/et_oldPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/editetext"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text=" New password"/>

    <ImageView
        android:layout_marginTop="-17dp"
        android:layout_marginStart="30dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_baseline_lock_open_24"/>

    <EditText
        android:id="@+id/et_newPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/editetext"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="Repeat password"/>

    <ImageView
        android:layout_marginTop="-17dp"
        android:layout_marginStart="30dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_baseline_lock_open_24"/>

    <EditText
        android:id="@+id/et_ConfiPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/editetext"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/btn_changepassword"
        android:layout_width="336dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#0E8388"
        android:clickable="false"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="14sp"></Button>






</LinearLayout>