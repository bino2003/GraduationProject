<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/uplodeimg_viewdetailsproduct"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/et_name_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/text"
        android:hint="product name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uplodeimg_viewdetailsproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewname_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginStart="20dp"

        android:layout_marginTop="20dp"
        android:src="@drawable/plate"
        app:layout_constraintStart_toStartOf="@+id/et_name_viewdetailsproduct"
        app:layout_constraintTop_toTopOf="@+id/et_name_viewdetailsproduct" />

    <TextView
        android:id="@+id/et_description_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Product Description"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name_viewdetailsproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewdescription_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/seeking"
        app:layout_constraintStart_toStartOf="@+id/et_description_viewdetailsproduct"
        app:layout_constraintTop_toTopOf="@+id/et_description_viewdetailsproduct" />

    <TextView
        android:id="@+id/et_categry_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text"
        android:hint="Categories"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_description_viewdetailsproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewcategory_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/categorys"
        app:layout_constraintStart_toStartOf="@+id/et_categry_viewdetailsproduct"
        app:layout_constraintTop_toBottomOf="@+id/et_description_viewdetailsproduct" />

    <TextView
        android:id="@+id/et_price_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Product price"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_categry_viewdetailsproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewprice_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/dollar"
        app:layout_constraintStart_toStartOf="@+id/et_price_viewdetailsproduct"
        app:layout_constraintTop_toTopOf="@+id/et_price_viewdetailsproduct" />




</androidx.constraintlayout.widget.ConstraintLayout>