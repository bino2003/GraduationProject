<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/backe"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/backebutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24">

        </ImageView>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="311dp"
        android:layout_height="163dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/editetext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="305dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="52dp"

        android:scaleX="1.5"
        android:scaleY="1.5"
        app:ci_drawable="@drawable/indecetore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager" />


    <TextView
        android:id="@+id/et_namefamilay"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/text"
        android:hint="productive family"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="NotSibling"></TextView>

    <ImageView
        android:id="@+id/imageviename_viewproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/plate"
        app:layout_constraintEnd_toEndOf="@+id/et_namefamilay"
        app:layout_constraintTop_toTopOf="@+id/et_namefamilay" />


    <TextView
        android:id="@+id/et_name_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/text"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"
        tools:ignore="NotSibling"></TextView>

    <ImageView
        android:id="@+id/imageviewname_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/plate"
        app:layout_constraintEnd_toEndOf="@+id/et_name_viewdetailsproduct"
        app:layout_constraintTop_toTopOf="@+id/et_name_viewdetailsproduct" />

    <TextView
        android:id="@+id/et_description_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Description"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:paddingTop="15dp"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name_viewdetailsproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewdescription_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/seeking"
        app:layout_constraintEnd_toEndOf="@+id/et_description_viewdetailsproduct"
        app:layout_constraintTop_toTopOf="@+id/et_description_viewdetailsproduct" />

    <TextView
        android:id="@+id/et_categry_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text"
        android:hint="Categories"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_description_viewdetailsproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewcategory_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/categorys"
        app:layout_constraintEnd_toEndOf="@+id/et_categry_viewdetailsproduct"
        app:layout_constraintTop_toBottomOf="@+id/et_description_viewdetailsproduct" />

    <TextView
        android:id="@+id/et_price_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Price"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:gravity="start"
        android:textSize="14sp"
        android:paddingTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_categry_viewdetailsproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewprice_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/dollar"
        app:layout_constraintEnd_toEndOf="@+id/et_price_viewdetailsproduct"
        app:layout_constraintTop_toTopOf="@+id/et_price_viewdetailsproduct" />




</androidx.constraintlayout.widget.ConstraintLayout>