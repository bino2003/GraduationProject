<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="311dp"
        android:layout_height="163dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/editetext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/et_name_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"
        tools:ignore="NotSibling"></TextView>

    <ImageView
        android:id="@+id/imageviewname_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/plate"
        app:layout_constraintEnd_toEndOf="@+id/et_name_viewdetailsproduct"
        app:layout_constraintTop_toTopOf="@+id/et_name_viewdetailsproduct" />

    <TextView
        android:id="@+id/et_description_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Description"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:paddingTop="15dp"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name_viewdetailsproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewdescription_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/seeking"
        app:layout_constraintEnd_toEndOf="@+id/et_description_viewdetailsproduct"
        app:layout_constraintTop_toTopOf="@+id/et_description_viewdetailsproduct" />

    <TextView
        android:id="@+id/et_categry_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text"
        android:hint="Categories"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_description_viewdetailsproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewcategory_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/categorys"
        app:layout_constraintEnd_toEndOf="@+id/et_categry_viewdetailsproduct"
        app:layout_constraintTop_toBottomOf="@+id/et_description_viewdetailsproduct" />

    <TextView
        android:id="@+id/et_price_viewdetailsproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Price"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:gravity="start"
        android:textSize="14sp"
        android:paddingTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_categry_viewdetailsproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewprice_viewdetailsproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/dollar"
        app:layout_constraintEnd_toEndOf="@+id/et_price_viewdetailsproduct"
        app:layout_constraintTop_toTopOf="@+id/et_price_viewdetailsproduct" />




</androidx.constraintlayout.widget.ConstraintLayout>