<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/ChooseImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_baseline_photo_camera_24" />
        </RelativeLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
    </LinearLayout>


    <EditText
        android:id="@+id/et_nameadd"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="NotSibling"></EditText>

    <ImageView
        android:id="@+id/imageviewname"
        android:layout_width="21dp"
        android:layout_height="17dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/plate"
        app:layout_constraintEnd_toEndOf="@+id/et_nameadd"
        app:layout_constraintTop_toTopOf="@+id/et_nameadd" />

    <EditText
        android:id="@+id/et_descriptionadd"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Description"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nameadd"></EditText>

    <ImageView
        android:id="@+id/imageviewdescription"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/seeking"
        app:layout_constraintEnd_toEndOf="@+id/et_descriptionadd"
        app:layout_constraintTop_toTopOf="@+id/et_descriptionadd" />

    <EditText
        android:id="@+id/et_categryadd"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text"
        android:hint="Categories"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_descriptionadd"></EditText>

    <ImageView
        android:id="@+id/imageviewcategory"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/categorys"
        app:layout_constraintEnd_toEndOf="@+id/et_categryadd"
        app:layout_constraintTop_toBottomOf="@+id/et_descriptionadd" />

    <EditText
        android:id="@+id/et_priceadd"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Price"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_categryadd"></EditText>

    <ImageView
        android:id="@+id/imageviewprice"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/dollar"
        app:layout_constraintEnd_toEndOf="@+id/et_priceadd"
        app:layout_constraintTop_toTopOf="@+id/et_priceadd" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/UploadBtn"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#0E8388"
        android:clickable="false"
        android:text="ADD"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_priceadd"></androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>