<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="18dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="75dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="75dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.44"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/homes" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardimag"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="18dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="75dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                app:cardCornerRadius="75dp">

                <ImageView
                    android:id="@+id/uplodeimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.44"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/img" />


            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>




    </androidx.constraintlayout.widget.ConstraintLayout>






    <EditText
        android:id="@+id/et_nameadd"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/text"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:ignore="NotSibling"></EditText>

    <ImageView
        android:id="@+id/imageviewname"
        android:layout_width="21dp"
        android:layout_height="17dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/plate"
        app:layout_constraintEnd_toEndOf="@+id/et_nameadd"
        app:layout_constraintTop_toTopOf="@+id/et_nameadd" />

    <EditText
        android:id="@+id/et_descriptionadd"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Description"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nameadd"></EditText>

    <ImageView
        android:id="@+id/imageviewdescription"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/seeking"
        app:layout_constraintEnd_toEndOf="@+id/et_descriptionadd"
        app:layout_constraintTop_toTopOf="@+id/et_descriptionadd" />

    <EditText
        android:id="@+id/et_categryadd"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text"
        android:hint="Categories"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_descriptionadd"></EditText>

    <ImageView
        android:id="@+id/imageviewcategory"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/categorys"
        app:layout_constraintEnd_toEndOf="@+id/et_categryadd"
        app:layout_constraintTop_toBottomOf="@+id/et_descriptionadd" />

    <EditText
        android:id="@+id/et_priceadd"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Price"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_categryadd"></EditText>

    <ImageView
        android:id="@+id/imageviewprice"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/dollar"
        app:layout_constraintEnd_toEndOf="@+id/et_priceadd"
        app:layout_constraintTop_toTopOf="@+id/et_priceadd" />

    <Button
        android:id="@+id/addbtn"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#0E8388"
        android:clickable="false"
        android:text="ADD"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_priceadd"></Button>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/whitecircle"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_camera_alt_24" />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>