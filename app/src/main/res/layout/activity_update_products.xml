    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="402dp"
        android:layout_height="192dp"
        android:layout_marginTop="28dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="311dp"
            android:layout_height="163dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/editetext" />

        <RelativeLayout
            android:id="@+id/ChooseImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/whitecircle">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_baseline_camera_alt_24" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="8dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/et_nameupdate"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_nameupdate"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"

        android:background="@drawable/text"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#0C0A0A"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="NotSibling"></EditText>

    <ImageView
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/plate"
        app:layout_constraintEnd_toEndOf="@+id/et_nameupdate"
        app:layout_constraintTop_toTopOf="@+id/et_nameupdate" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="Description"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nameupdate" />

    <EditText
        android:id="@+id/et_descriptionupdate"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/text"

        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#0C0A0A"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nameupdate"></EditText>

    <ImageView
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/seeking"
        app:layout_constraintEnd_toEndOf="@+id/et_descriptionupdate"
        app:layout_constraintTop_toTopOf="@+id/et_descriptionupdate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="Categories"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_descriptionupdate" />

    <EditText
        android:id="@+id/et_categryupdate"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/text"

        android:paddingStart="10dp"
        android:textColor="#0C0A0A"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_descriptionupdate"></EditText>

    <ImageView
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/categorys"
        app:layout_constraintEnd_toEndOf="@+id/et_categryupdate"
        app:layout_constraintTop_toBottomOf="@+id/et_descriptionupdate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="Price"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_categryupdate" />

    <EditText
        android:id="@+id/et_priceupdate"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/text"

        android:inputType="phone"
        android:paddingStart="10dp"
        android:textColor="#0C0A0A"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_categryupdate"></EditText>

    <ImageView
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/dollar"
        app:layout_constraintEnd_toEndOf="@+id/et_priceupdate"
        app:layout_constraintTop_toTopOf="@+id/et_priceupdate" />

    <Button
        android:id="@+id/updatebtn"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#0E8388"
        android:clickable="false"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_priceupdate"></Button>



</androidx.constraintlayout.widget.ConstraintLayout>