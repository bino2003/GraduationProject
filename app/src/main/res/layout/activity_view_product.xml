    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="311dp"
        android:layout_height="163dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/editetext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/et_name_viewproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/text"
        android:hint="product name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingTop="15dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"></TextView>




    <TextView
        android:id="@+id/et_name_productive_family"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="productive family name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        android:paddingTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_price_viewproduct"></TextView>


    <ImageView
        android:id="@+id/imageviename_viewproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/plate"
        app:layout_constraintEnd_toEndOf="@+id/et_name_productive_family"
