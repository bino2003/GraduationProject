        android:inputType="phone"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingTop="15dp"

        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
