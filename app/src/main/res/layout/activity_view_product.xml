    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="311dp"
        android:layout_height="163dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/editetext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="305dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="52dp"

        android:scaleX="1.5"
        android:scaleY="1.5"
        app:ci_drawable="@drawable/indecetore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager" />

    <TextView
        android:id="@+id/et_name_viewproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/text"
        android:hint="product name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingTop="15dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"></TextView>




    <TextView
        android:id="@+id/et_name_productive_family"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/productivefamily"
        android:hint="productive family name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        android:paddingTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_price_viewproduct"></TextView>


    <ImageView
        android:id="@+id/imageviename_viewproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintEnd_toEndOf="@+id/et_name_productive_family"
        app:layout_constraintTop_toTopOf="@+id/et_name_productive_family" />

    <ImageView
        android:id="@+id/imageviewname_viewproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"

        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/plate"
        app:layout_constraintEnd_toEndOf="@+id/et_name_viewproduct"
        app:layout_constraintTop_toTopOf="@+id/et_name_viewproduct" />

    <TextView
        android:id="@+id/et_description_viewproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Product Description"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingTop="15dp"

        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name_viewproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewdescription_viewproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/seeking"
        app:layout_constraintEnd_toEndOf="@+id/et_description_viewproduct"
        app:layout_constraintTop_toTopOf="@+id/et_description_viewproduct" />

    <TextView
        android:id="@+id/et_categry_viewproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text"
        android:hint="Categories"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingTop="15dp"

        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_description_viewproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewcategory_viewproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/categorys"
        app:layout_constraintEnd_toEndOf="@+id/et_categry_viewproduct"
        app:layout_constraintTop_toTopOf="@+id/et_categry_viewproduct" />

    <TextView
        android:id="@+id/et_price_viewproduct"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:hint="Product price"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingTop="15dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_categry_viewproduct"></TextView>

    <ImageView
        android:id="@+id/imageviewprice_viewproduct"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/dollar"
        app:layout_constraintEnd_toEndOf="@+id/et_price_viewproduct"
        app:layout_constraintTop_toTopOf="@+id/et_price_viewproduct" />




</androidx.constraintlayout.widget.ConstraintLayout>